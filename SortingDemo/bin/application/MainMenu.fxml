<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainScreenController">
   <center>
      <AnchorPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: White;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnBubbleSort" layoutX="416.0" layoutY="363.0" mnemonicParsing="false" onAction="#bubbleSortScreen" prefWidth="250.0" style="-fx-background-color: CornflowerBlue;" text="Bubble Sort" textFill="WHITE">
               <font>
                  <Font name="Segoe UI" size="29.0" />
               </font>
            </Button>
            <Button fx:id="btnQuickSort" layoutX="417.0" layoutY="454.0" mnemonicParsing="false" onAction="#quickSortScreen" prefWidth="250.0" style="-fx-background-color: MediumPurple;" text="Quick Sort" textFill="WHITE">
               <font>
                  <Font name="Segoe UI" size="29.0" />
               </font>
            </Button>
            <Button fx:id="btnInsertionSort" layoutX="419.0" layoutY="544.0" mnemonicParsing="false" onAction="#insertionSortScreen" prefWidth="250.0" style="-fx-background-color: MediumOrchid;" text="Insertion Sort" textFill="WHITE">
               <font>
                  <Font size="29.0" />
               </font>
            </Button>
            <Label layoutX="353.0" layoutY="287.0" text="Choose one sorting algorithm to start" textFill="#c7c7c7">
               <font>
                  <Font name="Segoe UI" size="23.0" />
               </font>
            </Label>
            <Label layoutX="292.0" layoutY="37.0" text="SORTING ALGORITHM " textFill="#aaa0b7">
               <font>
                  <Font name="Segoe UI Black" size="45.0" />
               </font>
            </Label>
            <Label layoutX="288.0" layoutY="75.0" text="VISUALIZATION" textFill="#4d31ad">
               <font>
                  <Font name="Segoe UI Black" size="63.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#menuAbout" text="About the program" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Quit">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#menuExit" text="Exit " />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
